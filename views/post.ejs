<%- include('head.ejs')%>
<style>
    .item1 {
        grid-area: header;
        height: 200px;
    }
    .item2 {
        grid-area: menu;
        height: 800px;
    }
    .item3 {
        grid-area: main;
        height: auto;
    }
    .item4 {
        grid-area: right;
        height: 450px;
    }

    .grid-container {
        display: grid;
        grid-template-areas:
            'menu main main main main right'
            'menu main main main main right';
        gap: 10px;
        background-color: white;
        padding: 10px;
    }

    .grid-container > div {
        background-color: rgb(242, 242, 242);
        text-align: left;
        font-size: 30px;
        border-color: black;
        border-style: solid;
    }
    .block {
        display: block;
        width: 96%;
        background-color: darkgrey;
        font-size: 16px;
        cursor: pointer;
        text-align: center;
        padding: 100px;
        margin: 2%;
    }
    .comment {
        border-color: #000;
        border-style: solid;
        margin: 2%;
    }
    .post {
        border-color: #000;
        border-style: solid;
        margin: 2%;
    }
    .blockRight {
        display: block;
        width: 96%;
        background-color: darkgrey;
        font-size: 16px;
        cursor: pointer;
        text-align: center;
        margin: 2%;
        padding: 30px;
    }
    .block:hover {
        background-color: #ddd;
        color: black;
    }
    .blockRight:hover {
        background-color: #ddd;
        color: black;
    }
    .reply{
        margin: 2%;
    }
    .button3 {
        background-color: rgb(54, 54, 54);
        border: none;
        color: white;
        padding: 5px 20px;
        text-align: center;
        text-decoration: none;
        display: inline;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }
</style>

<div class="grid-container">
    <div class="item2">Ads</div>
    <div class="item3">
        <div class="post">
            <h1><%= title %></h1>
            <p><%= post_content %></p>
            <a><button class="button button2">Reply</button></a>
        </div>
        <div class="comment">
            <p>Comment 1</p>
            <a><button class="button button2">Reply</button></a>
        </div>
        <div class="comment">
            <p>Comment 2</p>
            <a><button class="button button2">Reply</button></a>
        </div>
    </div>
    <div class="item4">
        <p>Favorites:</p>
        <button class="blockRight">Block Button</button>
        <button class="blockRight">Block Button</button>
        <button class="blockRight">Block Button</button>
        <button class="blockRight">Block Button</button>
    </div>
</div>


